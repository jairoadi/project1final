@model Project1.Models.EmailFormModel

<link href="~/Content/Style.css" rel="stylesheet" />
@{
    ViewBag.Title = "Contact us";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <h3>@ViewBag.Message</h3>
    </div>

    <div class="row">
        <address>
            555 N 200 E<br />
            Provo, BA 98052-6399<br />
            <abbr title="Phone">P:</abbr>
            425.555.0100
        </address>

        <address>
            <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>
    </div>
    <div class="row">
        @using (Html.BeginForm("Sent", "Contact", FormMethod.Post))
        {
            @Html.AntiForgeryToken()//hiden form that validates when form is submitted


                                <div class="form-group">
                                    @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FromName)
                                    </div>
                                </div>
            
                                <br />
                                <br />
            
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.FromEmail)
                                    </div>
                                </div>
            
                                <br />
                                <br />
            
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        <select class="form-control" id="exampleSelect1">
                                            <option>Weather</option>
                                            <option>Clothes</option>
                                            <option>Culture</option>

                                        </select>
                                     </div>
                                </div>

                                <br />
                                <br />
            
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Message)
                                    </div>
                                </div>

                                <br />
    <br />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Send" />
                                    </div>
                                </div>



        }
    </div>
    <div class="space3">

    </div>
</div>